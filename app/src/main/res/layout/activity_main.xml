<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.jason.minniejasonwedding.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/wedding_studio"
            android:id="@+id/wedding_studio"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book_yellow"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/photography"
            android:id="@+id/photography"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book_green"
            android:layout_margin="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/wedding_party"
            android:id="@+id/wedding_party"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book_blue"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/wedding_invitation"
            android:id="@+id/wedding_invitation"
            android:layout_gravity="center_vertical"
            android:background="@drawable/book_red"
            android:layout_margin="5dp" />

    </LinearLayout>
</LinearLayout>
