<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context="com.jason.minniejasonwedding.MainActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/wedding_party_taipei"
                android:id="@+id/wedding_party_taipei"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_yellow"
                android:layout_margin="5dp"
                android:onClick="onTaipeiWeddingPartyButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/wedding_party_taitung"
                android:id="@+id/wedding_party_taitung"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_green"
                android:layout_margin="5dp"
                android:onClick="onTaitungWeddingPartyButtonClick"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/wedding_photo"
                android:id="@+id/wedding_photo"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_blue"
                android:layout_margin="5dp"
                android:onClick="onPhotoViewButtonClick"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/camera"
                android:id="@+id/camera"
                android:layout_gravity="center_vertical"
                android:background="@drawable/book_red"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
